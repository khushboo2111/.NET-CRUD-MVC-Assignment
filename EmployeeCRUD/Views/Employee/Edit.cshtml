@model Employee


<h1>Edit Employee</h1>
@if (Model is null)
{
    <p>Employee was not found</p>
}

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />

        </div>

        <div class="mt-3">
            <label class="form-label">Department</label>
            <input type="text" class="form-control" asp-for="Department" />

        </div>

        <div class="mt-3">
            <label class="form-label">Project</label>
            <input type="text" class="form-control" asp-for="Project" />
        </div>


        <div class="mt-3">
            <label class="form-label">Age</label>
            <input type="text" class="form-control" asp-for="Age" />

        </div>

        <div class=" " mt-4>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="Employee" asp-action="Delete">Delete</button>
        </div>

    </form>
}